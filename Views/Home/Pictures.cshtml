@using System.IO

@{
ViewData["Title"] = "Pictures";
}
@model string[]

<style>
    .gallery-container {
        margin: 20px auto;
        padding: 20px;
        background-color: white;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .gallery-item {
        margin-bottom: 20px;
        text-align: center;
    }

    .gallery-item img {
        max-width: 100%;
        max-height: 300px;
        height: auto;
        border-radius: 8px;
    }

    .image-info {
        text-align: center;
        margin-top: 10px;
    }
</style>

<div class="container">
    <div class="gallery-container">
        <div class="row">
            @foreach (var image in Model)
            {
            <div class="col-md-4 gallery-item">
                <img src="~/images/@System.IO.Path.GetFileName(image)" alt="image" class="img-fluid">
                <div class="image-info">
                    <p>@System.IO.Path.GetFileName(image)</p>
                    <a href="~/images/@System.IO.Path.GetFileName(image)" download class="btn btn-primary">Download</a>
                </div>
            </div>
            }
        </div>
    </div>
</div>
